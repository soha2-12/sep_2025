class Solution:
    def minDeletionSize(self, strs):
        n = len(strs)
        m = len(strs[0])

        deleted = 0
        # sorted_pairs[i] = True means strs[i] < strs[i+1] is already confirmed
        sorted_pairs = [False] * (n - 1)

        for col in range(m):
            bad = False

            # Check if this column breaks lexicographic order
            for i in range(n - 1):
                if not sorted_pairs[i] and strs[i][col] > strs[i + 1][col]:
                    bad = True
                    break

            if bad:
                deleted += 1
                continue

            # Update sorted status for pairs
            for i in range(n - 1):
                if not sorted_pairs[i] and strs[i][col] < strs[i + 1][col]:
                    sorted_pairs[i] = True

        return deleted
