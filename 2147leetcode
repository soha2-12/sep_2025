class Solution:
    def numberOfWays(self, corridor):
        MOD = 1000000007

        # Count total seats
        total_seats = 0
        for c in corridor:
            if c == 'S':
                total_seats += 1

        if total_seats == 0 or total_seats % 2 == 1:
            return 0

        ways = 1
        seats = 0
        plants = 0

        for c in corridor:
            if c == 'S':
                seats += 1

                # Start of a new section
                if seats > 2 and seats % 2 == 1:
                    ways = (ways * (plants + 1)) % MOD
                    plants = 0
            else:
                # Count plants only between seat pairs
                if seats % 2 == 0 and seats > 0:
                    plants += 1

        return ways
