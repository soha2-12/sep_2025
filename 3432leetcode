class Solution:
    def countPartitions(self, nums):
        total = sum(nums)
        left_sum = 0
        count = 0
        
        # i goes from 0 to n-2 because both sides must be non-empty
        for i in range(len(nums) - 1):
            left_sum += nums[i]
            right_sum = total - left_sum
            
            # check same parity
            if (left_sum % 2) == (right_sum % 2):
                count += 1
        
        return count
