class Solution(object):
    def addTwoNumbers(self, l1, l2):
        carry = 0
        head = ListNode(0)
        curr = head

        while l1 or l2 or carry:
            x = l1.val if l1 else 0
            y = l2.val if l2 else 0

            s = x + y + carry
            carry = s // 10

            curr.next = ListNode(s % 10)
            curr = curr.next

            if l1: l1 = l1.next
            if l2: l2 = l2.next

        return head.next
